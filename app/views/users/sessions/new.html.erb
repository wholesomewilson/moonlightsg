<div class="mainadmin">
  <div class="subadmin text-center">
    <h2>Log in</h2>
    <div class="sessionadmin">
      <h5>Oh, You're new here? </h5>
      <h6><%= link_to "Sign up here!", signup_path%></h6>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.text_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
      </div>
      <div class="field">
        <br><%= f.password_field :password, autocomplete: "off", placeholder:"Password", class:"form-control" %>
      </div>
      <span class="subadmin_alert">
        <% if alert.present? %>
          <%= alert.html_safe %>
        <% end %>
      </span>
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-success btn-block" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", forgetpassword_path, class:"forgetpassword" %><br />
          <% end -%>
        </div>
      <% end -%>
    <% end %>
  </div>
</div>

