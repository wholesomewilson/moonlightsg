<% if @message.body.present? %>
  <div class="chatdialog_new">
    <% if @message.id == Conversation.find(@message.conversation_id).messages.first.id%>
      <div class="sent_at_timezone">
        <%= @message.sent_at_timezone.strftime("%e %b %y %a, %l:%M %p") %>
      </div>
    <% end %>
    <div class="chatmessage">
      <%= @message.body %> <%= hidden_field_tag "message_id", @message.user_id %>
    </div>
  </div>
<% end %>
<% if @message.photo.present? %>
  <div class="chatdialog_new">
    <div class="chatmessage">
      <%= image_tag(@message.photo.thumb.url, class:"chat_photo", size:"240x240") %> <%= hidden_field_tag "message_id", @message.user_id %>
    </div>
  </div>
<% end %>
