      <div class="vcenter">
        <div class="col-xs-12">
          <div class="landingdetails">
            <%= link_to 'Terms and Conditions', termsandconditions_path %>
          </div>
          <div class="landingdetails">
            <%= link_to 'Contact Us', contact_path %>
          </div>
          <div class="">
            <%= link_to 'Blog', blog_path %>
