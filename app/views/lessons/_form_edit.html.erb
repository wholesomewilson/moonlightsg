                <% f.object.job_photo.each do |photo| %>
                <div class='photo_wrapper'>
                  <%= image_tag(photo, size: "95x95", :class => "img_partner_photos", :id => "partner_photos_#{@lesson.job_photo.index(photo)}") %>
