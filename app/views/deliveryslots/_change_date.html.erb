<div class="row">
  <%= form_for @deliveryslot do |f| %>
  <div class="col-xs-6">
    <br><%= f.text_field :date, id:"delivery_date_post_#{@deliveryslot.id}", class:"form-control text-center com_info delivery_date_post", autocomplete:"__away", placeholder:"Date", value: @deliveryslot.date.strftime("%e-%m-%Y") %>
    <div class="missinginfo" id="missinginfo_deli">Delivery Date is missing!</div>
  </div>
  <div class="col-xs-12 delivery_timeslot">
    <br><%= select_tag "deliveryslot[timeslot_id]", options_from_collection_for_select(Timeslot.all, 'id', 'slot'), id:"timeslot_pre", class:"form-control text-center", prompt:"Please choose a Delivery Time" %>
  </div>
  <div class="col-xs-6">
    <br><%= f.submit "Change", id:"btn-change-address", class:"btn-done" %><br>
  </div>
  <% end %>
</div>
<br>

<script>
  var today = new Date(2019, 5, 4, 0, 0, 0, 0)
  var enddate1 = new Date(2019, 5, 9, 0, 0, 0, 0)
  if ($('.cookies_delivery').length > 0){
    $('.delivery_date_post').datepicker({
        format: 'dd-mm-yyyy',
        autoclose: true,
        startDate: today,
        endDate: enddate1
    });
  }else{
    $('.delivery_date_post').datepicker({
        format: 'dd-mm-yyyy',
        autoclose: true,
        startDate: today,
    });
  }
</script>
