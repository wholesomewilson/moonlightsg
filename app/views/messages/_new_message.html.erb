<% if @message.body.present? %>
  <div class="chatdialog_new">
    <% if @message.id == Conversation.find(@message.conversation_id).messages.first.id%>
      <div class="sent_at_timezone">
        <%= @message.sent_at_timezone.strftime("%e %b %y %a, %l:%M %p") %>
      </div>
    <% end %>
    <div class="chatmessage" id="message_no_<%= @message.id %>">
      <%= @message.body %> <%= hidden_field_tag "message_id", @message.user_id %>
    </div>
  </div>
<% end %>
<% if @message.chatimage.present? %>
  <div class="chatdialog_new">
    <div class="chatmessage" id="message_no_<%= @message.id %>">
      <%= image_tag @message.chatimage.image.url, class:"chat_photo", size:"240x240", id:"chat_photo_#{@message.id}" %> <%= hidden_field_tag "message_id", @message.user_id %>
      <div class="chatimage_fullscreen_wrapper" id="chatimage_fullscreen_wrapper_<%= @message.id %>">
        <%= image_tag @message.chatimage.image.url, class:"chatimage_fullscreen" %>
      </div>
    </div>
  </div>
<% end %>
