<div class="container">
  <div class="row text-center">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
      <div class="prelaunch_text relative">
        <h4>Thank you so much</h4>
        <br>Get matched with a shopper to buy your items through our crowdsourcing platform.
      </div>
      <div class="email_form">
        <%= form_for @email, url: mailinglists_path(@email), html: { method: :post } do |f| %>
          <%= f.text_field :body, class:"form-control email_form_field", placeholder:"Email Address" %><br>
          <%= f.submit 'SIGN UP FOR EARLY INVITATION', class:"btn-changes" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
